{% extends 'layout.njk' %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block  content %}

<h1 class="govuk-heading-l">Enter your holiday start date and end date</h1>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    {{ govukDateInput({
      id: "start-date",
      namePrefix: "start-date",
      fieldset: {
        legend: {
          text: "Start Date"
        }
      },
    hint: {
      text: "For example, 27 03 2023"
    }
      })
    }}
  </div>
  <div class="govuk-grid-column-one-half">
    {{ govukDateInput({
      id: "end-date",
      namePrefix: "end-date",
      fieldset: {
        legend: {
          text: "End Date"
        }
      },
    hint: {
      text: "For example, 01 04 2023"
    }
      })
    }}
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    {{ govukButton({
      text: "Submit"
      })
    }}
  </div>
</div>

{{ govukTable({
  caption: "Holiday Requests",
  captionClasses: "govuk-table__caption--m",
  firstCellIsHeader: true,
  head: [
    {
      text: "Start Date"
    },
    {
      text: "End Date"
    },
    {
      text : "Total Days"
    }
  ],
  rows: [
    [
      {
        text: "01/02/2022"
      },
      {
        text: "03/02/2022"
      },
      {
        text: "3 Days"
      }
    ],
    [
      {
        text: "15/10/2023"
      },
      {
        text: "20/10/2023"
      },
      {
        text: "5 Days"
      }
    ]
  ]
}) }}

{% endblock %}